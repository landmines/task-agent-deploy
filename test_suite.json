{
  "testSuiteName": "Task Agent Core Functionality",
  "created": "2025-04-13",
  "tests": [
    {
      "task": "Create a test file",
      "intent": "create_file",
      "expected": {
        "success": true,
        "filename": "test_output.txt",
        "content": "Test content"
      }
    },
    {
      "task": "Modify existing file",
      "intent": "modify_file", 
      "expected": {
        "success": true,
        "filename": "test_output.txt",
        "backup_created": true
      }
    },
    {
      "task": "Execute sandboxed code",
      "intent": "execute_code",
      "code": "x = 1 + 1; result = x",
      "expected": {
        "success": true,
        "return_value": 2
      }
    },
    {
      "task": "Test resource limits",
      "intent": "execute_code",
      "code": "x = ' ' * (1024 * 1024 * 300)",
      "expected": {
        "success": false,
        "error": "memory limit exceeded"
      }
    },
    {
      "task": "Test deployment planning",
      "intent": "deploy",
      "expected": {
        "success": true,
        "requires_confirmation": true
      }
    },
        {
            "intent": "execute_code",
            "code": "print('Hello World')",
            "expected": {
                "success": true,
                "return_value": "Hello World\n"
            }
        },
        {
            "intent": "create_file",
            "task": {
                "filename": "test.txt",
                "content": "test content"
            },
            "expected": {
                "success": true
            }
        },
        {
            "intent": "execute_code",
            "code": "while True: pass",
            "expected": {
                "success": false,
                "error": "timeout"
            }
        },
        {
            "intent": "modify_file",
            "task": {
                "filename": "nonexistent.txt",
                "content": "test"
            },
            "expected": {
                "success": false
            }
        }
  ]
}